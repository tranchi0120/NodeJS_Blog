<form method="POST" action="/courses/store" class="mt-5">
  <h2 class="mt-5">Add Course</h2>
  <div class="form-outline mb-4">
    <label class="form-label" for="name">Name</label>
    <input type="text" id="name" class="form-control" name="name" />
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="description">Description</label>
    <input type="text" id="description" class="form-control" name="description" />
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="image">Image</label>
    <input type="text" id="image" class="form-control" name="image" />
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="videoId">Video ID</label>
    <input type="text" id="videoId" class="form-control" name="videoId" />
  </div>


  <!-- Submit button -->
  <button type="submit" class="btn btn-primary">Add Course</button>

</form>